<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" class="form-control" type="text" name="postTitle" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="content">Post</label>
        <textarea id="content" class="form-control" name="postContent" rows="4"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>

<%- include("partials/footer") -%>